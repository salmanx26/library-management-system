<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.layout.Region?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.librarymanagementsystem.LoginController"
           stylesheets="@styles.css">
    
    <VBox styleClass="login-card" alignment="TOP_CENTER" spacing="24" maxWidth="400">
        <!-- Logo/Icon -->
        <VBox alignment="CENTER" spacing="16">
            <StackPane style="-fx-background-color: #E8F0FE; -fx-background-radius: 50; -fx-min-width: 50; -fx-min-height: 50; -fx-max-width: 50; -fx-max-height: 50;">
                 <!-- Book Icon SVG -->
                <SVGPath content="M4 6a2 2 0 012-2h12a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V6zm2 0h12v12H6V6zm2 2v8h8V8H8z" 
                         scaleX="1.2" scaleY="1.2" style="-fx-fill: #1A73E8;" />
            </StackPane>
            
            <VBox alignment="CENTER" spacing="8">
                <Label text="Library System Login" styleClass="header-title"/>
                <Label text="Welcome back! Please enter your credentials." styleClass="header-subtitle"/>
            </VBox>
        </VBox>

        <!-- Form Fields -->
        <VBox spacing="16">
            <!-- Username -->
            <VBox spacing="8">
                <Label text="Username" styleClass="input-label"/>
                <TextField fx:id="usernameField" promptText="Enter your username" styleClass="text-field" prefHeight="40"/>
            </VBox>

            <!-- Password -->
            <VBox spacing="8">
                <Label text="Password" styleClass="input-label"/>
                <StackPane alignment="CENTER_RIGHT">
                     <TextField fx:id="passwordTextField" promptText="Enter your password" styleClass="text-field" prefHeight="40" visible="false" managed="false"/>
                     <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="password-field" prefHeight="40"/>
                     <Button fx:id="togglePasswordButton" onAction="#onTogglePasswordClick" style="-fx-background-color: transparent; -fx-cursor: hand;" text="ðŸ‘">
                        <padding>
                            <Insets right="10"/>
                        </padding>
                     </Button>
                </StackPane>
            </VBox>
        </VBox>

        <!-- Login Button -->
        <Button fx:id="loginButton" text="Login" onAction="#onLoginButtonClick" 
                styleClass="primary-button" maxWidth="Infinity" prefHeight="40"/>

        <!-- Forgot Password -->
        <Button text="Forgot Password?" styleClass="link-button"/>
        
    </VBox>
</StackPane>
